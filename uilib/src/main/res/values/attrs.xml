<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ClearableEditText">
        <attr name="ce_padding" format="dimension" />
        <attr name="ce_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="PercentBar">
        <attr name="percent_current" format="integer"/>
        <attr name="percent_max" format="integer"/>

        <attr name="percent_unreached_color" format="color"/>
        <attr name="percent_reached_color" format="color"/>

        <attr name="percent_reached_bar_height" format="dimension"/>
        <attr name="percent_unreached_bar_height" format="dimension"/>

        <attr name="percent_text_size" format="dimension"/>
        <attr name="percent_text_color" format="color"/>

        <attr name="percent_text_offset" format="dimension"/>

        <attr name="percent_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="percentBarStyle" format="reference"/>
    </declare-styleable>

    <attr name="siArrowPosition">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="siBorderType">
        <enum name="stroke" value="0" />
        <enum name="fill" value="1" />
    </attr>
    <attr name="siStrokeCap">
        <enum name="butt" value="0" />
        <enum name="round" value="1" />
        <enum name="square" value="2" />
    </attr>

    <attr name="siStrokeJoin">
        <enum name="bevel" value="0" />
        <enum name="miter" value="1" />
        <enum name="round" value="2" />
    </attr>

    <declare-styleable name="ShaderImageView">
        <attr name="siSquare" format="boolean" />
        <attr name="siBorderColor" format="color" />
        <attr name="siBorderWidth" format="dimension" />
        <attr name="siBorderAlpha" format="float" />
        <attr name="siForeground" format="integer|reference" />
        <!-- Rounded ImageListBean View -->
        <attr name="siRadius" format="dimension" />
        <!--BubbleImageView-->
        <attr name="siArrowPosition" />
        <attr name="siTriangleHeight" format="dimension" />
        <!--PorterImageView-->
        <attr name="siShape" format="integer|reference" />
        <!--ShaderImageView-->
        <attr name="siBorderType" />
        <attr name="siStrokeCap" />
        <attr name="siStrokeJoin" />
        <attr name="siStrokeMiter" format="dimension" />
    </declare-styleable>
    
</resources>

<resources>

    <style name="Tip">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Login">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Login.View">
        <item name="android:background">@color/color_d2d2d2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/left_right_padding</item>
    </style>

    <style name="Login.Button">
        <item name="android:background">@drawable/selector_round_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Login.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/left_right_padding</item>
        <item name="android:textColor">@color/color_light_blue</item>

    </style>

    <style name="Login.EditText">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">@dimen/left_right_padding</item>
        <item name="android:paddingRight">@dimen/left_right_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_base_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:singleLine">true</item>
        <!--<item name="app:ce_drawable">@mipmap/login_icon_delete</item>-->
    </style>

    <style name="Linearlayout_Style">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">layoutOnclick</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_window_loading_in</item>
        <item name="android:windowExitAnimation">@anim/anim_window_loading_out</item>
    </style>

    <style name="labelTextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_base_color</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--群投票-->
    <style name="SelfTextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_base_color</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--群投票-->
    <style name="VoteLabelTV" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_base_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Bottom_WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_view_up</item>
        <item name="android:windowExitAnimation">@anim/anim_view_down</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/view_color_rectangle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>

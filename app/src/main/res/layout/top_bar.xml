<?xml version="1.0" encoding="UTF-8"?>
<com.linjin.zhimi.widget.TopActionBar
    android:id="@+id/topActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:layout_alignParentTop="true"
    android:background="@color/color_base">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/topbar_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@mipmap/bar_back"
        />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/topbar_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/text_cancel"
        android:textColor="@color/color_light_blue"
        android:textSize="@dimen/text_size_15"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/color_topbar_title_text"
        android:textSize="@dimen/topbar_title_text_size"/>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/topbar_back"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/act_padding"
        android:paddingRight="@dimen/act_padding"
        android:text="@string/text_save"
        android:textColor="@color/color_light_blue"
        android:textSize="@dimen/text_size_15"
        />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line"
        android:visibility="gone"/>
</com.linjin.zhimi.widget.TopActionBar>  
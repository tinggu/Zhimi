<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:src="@mipmap/reg_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/Edit.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Edit.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="知觅号：" />

                <TextView
                    android:id="@+id/tv_zmnumber"
                    style="@style/Edit.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678" />

                <TextView
                    android:id="@+id/tv_local"
                    style="@style/Edit.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:drawableLeft="@mipmap/location_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_edit"
                    style="@style/Edit.Button.Grey"
                    android:layout_marginRight="10dp"
                    android:text="@string/text_edit" />

                <Button
                    android:id="@+id/btn_setting"
                    style="@style/Edit.Button.Grey"
                    android:text="@string/text_setting" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    style="@style/Edit.Button"
                    android:layout_marginRight="10dp"
                    android:text="@string/text_tlak" />

                <Button
                    style="@style/Edit.Button.Grey"
                    android:text="@string/action_watch" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_thumb"
                style="@style/Edit.SmallText"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                style="@style/Edit.SmallText"
                android:text="个赞" />
        </LinearLayout>

        <View style="@style/Edit.View" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_watch"
                style="@style/Edit.SmallText"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                style="@style/Edit.SmallText"
                android:text="关注" />
        </LinearLayout>

        <View style="@style/Edit.View" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_watched"
                style="@style/Edit.SmallText"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                style="@style/Edit.SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注的人" />
        </LinearLayout>

        <View style="@style/Edit.View" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_comment"
                style="@style/Edit.SmallText"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                style="@style/Edit.SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个评价" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Login.View" />
</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_menu_bg"
    android:orientation="vertical">

    <TextView
        style="@style/Menu.Text"
        android:background="@color/color_menu_title_bg"
        android:drawableRight="@null"
        android:text="匿题分类"  />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_menu_title_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_last"
            style="@style/Menu.Text"
            android:text="@string/text_last_topic" />

        <View style="@style/Menu.Line" />

        <TextView
            android:id="@+id/tv_collect"
            style="@style/Menu.Text"
            android:text="@string/text_collect_answe" />

        <View style="@style/Menu.Line" />

        <TextView
            android:id="@+id/tv_draft"
            style="@style/Menu.Text"
            android:text="@string/text_draft" />

    </LinearLayout>
</LinearLayout>

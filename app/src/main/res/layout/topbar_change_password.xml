<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_height"
    android:background="@color/color_base">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/topbar_back"
        android:layout_height="@dimen/topbar_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="12dp"
        android:src="@mipmap/bar_back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/iv_back"
        android:text="@string/change_password_word_title"
        android:textColor="@color/color_topbar_title_text"
        android:textSize="@dimen/topbar_title_text_size" />


</RelativeLayout>  
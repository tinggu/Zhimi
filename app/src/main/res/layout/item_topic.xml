<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_menu_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_avatar"
            style="@style/Topic.Avatar"
            fresco:actualImageScaleType="center"
            fresco:roundedCornerRadius="4dp"
            fresco:placeholderImage="@mipmap/reg_avatar"
            fresco:placeholderImageScaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_thumb"
            style="@style/Topic.Thumb"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:maxLines="1"
            android:text="9999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Topic.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_answer"
            style="@style/Topic.Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/white" />

        <com.facebook.drawee.view.SimpleDraweeView
            style="@style/Topic.Image"
            fresco:actualImageScaleType="center"
            fresco:roundedCornerRadius="4dp"
            fresco:placeholderImage="@color/white"
            fresco:placeholderImageScaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>
